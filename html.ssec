<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8" />
  <meta name="viewport" content="width=device-width, initial-scale=1.0" />
  <title>Food Order App</title>
  <script src="https://cdn.tailwindcss.com"></script>
</head>
<body class="bg-gray-100 text-gray-900">
  <div class="max-w-xl mx-auto p-4">
    <h1 class="text-3xl font-bold text-center mb-6">üçî Quick Food Order</h1>

    <div id="menu" class="grid gap-4">
      <!-- Food Item -->
      <div class="bg-white p-4 rounded shadow flex justify-between items-center">
        <div>
          <h2 class="text-xl font-semibold">Burger</h2>
          <p class="text-sm text-gray-600">Rs. 120</p>
        </div>
        <button onclick="addToOrder('Burger', 120)" class="bg-green-500 text-white px-4 py-2 rounded hover:bg-green-600">
          Add
        </button>
      </div>

      <div class="bg-white p-4 rounded shadow flex justify-between items-center">
        <div>
          <h2 class="text-xl font-semibold">Pizza</h2>
          <p class="text-sm text-gray-600">Rs. 250</p>
        </div>
        <button onclick="addToOrder('Pizza', 250)" class="bg-green-500 text-white px-4 py-2 rounded hover:bg-green-600">
          Add
        </button>
      </div>

      <div class="bg-white p-4 rounded shadow flex justify-between items-center">
        <div>
          <h2 class="text-xl font-semibold">Fries</h2>
          <p class="text-sm text-gray-600">Rs. 80</p>
        </div>
        <button onclick="addToOrder('Fries', 80)" class="bg-green-500 text-white px-4 py-2 rounded hover:bg-green-600">
          Add
        </button>
      </div>
    </div>

    <!-- Order Summary -->
    <div class="mt-6 bg-white p-4 rounded shadow">
      <h2 class="text-2xl font-bold mb-2">üßæ Order Summary</h2>
      <ul id="order-list" class="text-gray-700 mb-2"></ul>
      <p class="font-semibold">Total: Rs. <span id="total">0</span></p>
    </div>
  </div>

  <script>
    let total = 0;
    let orderList = [];

    function addToOrder(item, price) {
      orderList.push({ item, price });
      total += price;

      const listEl = document.getElementById("order-list");
      const totalEl = document.getElementById("total");

      // Update list
      listEl.innerHTML = '';
      orderList.forEach(o => {
        const li = document.createElement("li");
        li.textContent = `${o.item} - Rs. ${o.price}`;
        listEl.appendChild(li);
      });

      totalEl.textContent = total;
    }
  </script>
</body>
</html>
